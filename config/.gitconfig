[core]
	editor = hx
	pager = delta
	excludesFile = '~/.gitignore'
[user]
	name = Sampo Siltanen
	useConfigOnly = true
[pull]
	rebase = true
[interactive]
	diffFilter = delta --color-only
[add.interactive]
	useBuiltin = false
[delta]
	navigate = true
	light = false
[merge]
	conflictstyle = diff3
[diff]
	colorMoved = default
[push]
	autoSetupRemote = true
[init]
	defaultBranch = main
[column]
	ui = auto
[branch]
	sort = -committerdate
[maintenance]
	auto = false
	strategy = incremental
[alias]
	fomo = !git fetch origin main && git rebase origin/main
	push-lease = !git push --force-with-lease
